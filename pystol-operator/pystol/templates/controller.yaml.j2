---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: pystol-controller
spec:
  selector:
    matchLabels:
      name: pystol-controller
      component: pystol-controller
  replicas: 1
  template:
    metadata:
      labels:
        name: pystol-controller
        component: pystol-controller
    spec:
      containers:
        - name: pystol-controller
          image: {{ appSettings.pystol.controller.image }}
          imagePullPolicy: Always
          command: ["pystol"]
          args: ["listen"]
          env:
            - name: NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
      serviceAccountName: pystol-acc

